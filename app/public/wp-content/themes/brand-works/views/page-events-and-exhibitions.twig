                </div>
            </div>
        </div>
    </section>

    <!-- Two column image and text - image left -->
    <section class="bg-dark-green pb-10" id="fabric-displays">
        <div class="container">
            <div
                class="flex flex-wrap lg:flex-nowrap gap-10 lg:gap-[60px] items-center"
            >
                <div
                    class="w-full lg:w-1/2 lg:min-h-[632px] rounded-[20px] overflow-hidden"
                >
                    <img
                        src="{{ theme.uri }}/assets/images/assets/images/events-and-exhibitions/Fabric Display_Transparent (1).png"
