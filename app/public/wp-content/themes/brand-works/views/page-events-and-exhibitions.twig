{% block content %}
    <!-- Hero section -->
    <section
        class="relative"
        style="
            background-image: url('{{ theme.uri }}/assets/images/assets/images/events-and-exhibitions/events-and-exhibitions-hero.png');
            object-fit: cover;
            object-position: center;
            width: 100%;
            height: 100%;
        "
    >
        <div
            class="absolute top-0 left-0 w-full h-full bg-dark-green/90 z-[1] mix-blend-multiply"
        ></div>

        <div
            class="absolute bottom-0 left-0 w-full h-20 bg-gradient-to-t from-dark-green z-[2]"
