{% block content %}
    <!-- Hero section -->
    <section
        class="relative"
        style="
            background-image: url('{{ theme.uri }}/assets/images/assets/images/signage-and-branding/signage-and-branding-hero.png');
            object-fit: cover;
            object-position: center;
            width: 100%;
            height: 100%;
        "
    >
        <div
            class="absolute top-0 left-0 w-full h-full bg-dark-green/90 z-[1] mix-blend-multiply"
        ></div>

        <div
            class="absolute bottom-0 left-0 w-full h-20 bg-gradient-to-t from-dark-green z-[2]"
        ></div>

        <div class="container">
            <div
                class="pt-10 lg:pt-[100px] pb-10 lg:pb-[84px] relative z-10"
            >
                <div class="w-full flex flex-col items-center relative">
