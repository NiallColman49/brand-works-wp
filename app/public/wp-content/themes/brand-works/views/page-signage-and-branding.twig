                        src="{{ theme.uri }}/assets/images/assets/images/signage-and-branding/GREGGS_BRAND_WORKS.webp"
                        alt="Flying tiger"
                        class="object-cover object-center w-full h-full lg:min-h-[632px]"
                    />
